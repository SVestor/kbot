lin:
	@read -p "Enter the desired architecture to make it for Windows: |amd64|386|arm64|arm| : " ARCH && \
	export ARCH=$$ARCH && \
	echo $$ARCH && \
	case $$ARCH in \
		(amd64) \
			echo "команди для архітектури amd64" \
			;; \
		(386) \
			echo  "команди для архітектури 386" \
			;; \
		(*) \
			echo "Invalid architecture $$ARCH"; \
			exit 1; \
			;; \
	esac
rec:
	ifeq ($(shell read -p "Do you wish to create the Docker image for  yes|no ? : " READ )yes) \
		docker build . -t rec:make-version \
	endif

next:
string = yes
 # end of line; there is a space here

all:
ifeq ($(shell read -p "Do you wish to create the Docker image for  yes|no ? : " YESS && echo $$YESS), yes) 
	docker build . -t hh:hh-vv
else
    $(error Image won't be created)
endif
